{
  "manifest_version": 3,
  "name": "UC Flex Weekly Hours",
  "version": "1.0",
  "permissions": ["scripting", "tabs", "activeTab", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": [
    "https://www.ucflex.uc.edu/*",
    "https://*.ucflex.uc.edu/*"
    ]
}

